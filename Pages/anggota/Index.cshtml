@page
@model anggotaorganisasi.Pages.anggota.IndexModel
@{
}

<br>
<h2>Daftar Anggota</h2>
<br>
<a class='btn btn-primary btn-sm' href='/anggota/Create'>Anggota Baru</a>
<br>
<p></p>
<table class="table" width="1400px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Telpon</th>
            <th>Alamat</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model.ListAnggota)
       {
       <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.phone</td>
            <td>@item.address</td>
            <td>@item.created_at</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/anggota/Edit?id=@item.id">Edit</a>
                <a class="btn btn-danger btn-sm" href="/anggota/Delete?id=@item.id">Delete</a>
            </td>
       </tr>
       }
    </tbody>
</table>